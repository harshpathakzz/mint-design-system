{
  "name": "mint-design-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm run lint:eslint && pnpm run lint:stylelint",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:stylelint": "stylelint '**/*.{css,scss,sass}'"
  },
  "dependencies": {
    "next": "15.1.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^26.0.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.tsx": "eslint --fix",
    "*.js": "eslint --fix",
    "*.jsx": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.scss": "stylelint --fix",
    "*.sass": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint-staged"
    }
  }
}
